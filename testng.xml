<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name = " Parallel Smoke Regression Suite"
parallel = "tests"
thread-count = "4">

<test name="Smoke Tests - Chrome">
	<parameter name = "browser" value="chrome"/>
	<classes>
	  <class name="com.tests.SmokeTests"/>
	</classes>
</test>
<test name="Smoke Tests - Edge">
	<parameter name = "browser" value="edge"/>
	<classes>
	  <class name="com.tests.SmokeTests"/>
	</classes>
</test>


<test name="Regression Tests - Chrome">
	<parameter name = "browser" value="chrome"/>
	<classes>
	  <class name="com.tests.RegressionTests"/>
	</classes>
</test>

<test name="Regression Tests - Edge">
	<parameter name = "browser" value="edge"/>
	<classes>
	  <class name="com.tests.RegressionTests"/>
	</classes>
</test>

</suite>